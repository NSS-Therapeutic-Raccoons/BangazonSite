@model Bangazon.Models.OrderViewModels.OrderPaymentTypesViewModel

@{
    ViewData["Title"] = "ChoosePaymentType";
}

<h2>Choose a Payment Type</h2>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Order.PaymentType.PaymentTypeId" class="control-label"></label>
            <select asp-for="Order.PaymentType.PaymentTypeId" class="form-control" asp-items="@Model.PaymentTypes"></select>
        </div>
    </div>
</div>
<div class="form-group">
    <input type="submit" value="Done" class="btn btn-default" />
</div>
